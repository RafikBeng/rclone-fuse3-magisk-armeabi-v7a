 void fuse_stop_cleanup_thread(struct fuse *f)
 {
+#ifdef __ANDROID__
+    (void)f;
+    return;
+#else
     if (lru_enabled(f)) {
         pthread_mutex_lock(&f->lock);
         pthread_cancel(f->prune_thread);
         pthread_mutex_unlock(&f->lock);
         pthread_join(f->prune_thread, NULL);
     }
+#endif
 }